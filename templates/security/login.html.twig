{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            <h3><b>You are logged in</b> as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a></h3>
        </div>
    {% else %}  
    <div class="row">
        <div class="form-container col-xl-4 col-lg-6 col-md-8 offset-xl-4 offset-md-2 offset-lg-3">
            
            
            <h1 class="h3 mb-3 font-weight-normal">Login</h1>    
            <form method="post">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="btn btn-primary" type="submit" onclick="Login()">
                    Login
                </button>
            </form>

            O dirijase al <a href="/registro">Registro</a>
            
        </div>
    </div>

    {% endif %}

    
{% endblock %}

{% block javascripts %}
{{parent()}}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script src="{{ asset('js/ajax-call.js') }}"></script>
{% endblock %}